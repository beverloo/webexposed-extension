{
  "name": "WebExposed Extension",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Extension to organize WebKit WebExposed bugs.",
  "permissions": [
    "http://webkit.org/",
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      // Note: we cannot include the query parameter "?keywords=WebExposed" in
      // the 'matches' string because of crbug.com/57423. We test for it in 
      // the script.
      "matches": ["https://bugs.webkit.org/buglist.cgi*"],
      "js": ["webexposed.js"],
      "css": ["webexposed.css"]
    }
  ]
}
